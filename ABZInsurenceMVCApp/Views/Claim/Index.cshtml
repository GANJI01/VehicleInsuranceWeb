                @Html.DisplayFor(modelItem => item.IncidentDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurveyorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurveyorPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurveyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurveyDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaimStatus)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { claimAmount = item.ClaimAmount}) |
                    @Html.ActionLink("Details", "Details", new { claimAmount = item.ClaimAmount })}) |
                    @Html.ActionLink("Delete", "Delete", new { claimAmount = item.ClaimAmount }) })
                    
