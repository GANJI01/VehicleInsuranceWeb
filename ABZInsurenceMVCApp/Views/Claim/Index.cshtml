@model IEnumerable<ABZInsurenceMVCApp.Models.Claim>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IncidentLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IncidentDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveyorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveyorPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurveyDate)
            </th>
