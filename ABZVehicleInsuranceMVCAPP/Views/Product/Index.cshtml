<!-- Search Form -->
<div>
    @using (Html.BeginForm("Index", "Product", FormMethod.Get))
    {
        <table>
            <tr>
                <td>
                    <span><b>Search By: </b></span>
                    @Html.RadioButton("searchBy", "ProductName")
                    <text>Product Name</text>
                    @Html.RadioButton("searchBy", "Id", true)  <!-- Default search by Product ID -->
                    <text>Product Id</text>
                    @Html.RadioButton("searchBy", "InsuredInterests")
                    <text>Insured Interests</text>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("searchValue", null, new { @class = "form-control", placeholder = "Enter Product Id" })
                </td>
                <td>
                    <input type="submit" value="Search" class="btn btn-outline-success" />
                </td>
            </tr>
        </table>
    }
</div>

<!-- Display Results -->
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["InfoMessage"]
    </div>
}

<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductUIN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsuredInterests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PolicyCoverage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductUIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsuredInterests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyCoverage)
            </td>
            <td>
                  @*  @Html.ActionLink("Edit", "Edit", new { productID = item.ProductID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { productID = item.ProductID }, new { @class = "btn btn-sccuess" }) |
